<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bulgaria.a_arshinkov.hangman">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Singleplayer"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Multiplayer"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MultiplayerWordEnter"
            android:screenOrientation="portrait" />
        <activity android:name=".GameOver" />
        <activity android:name=".AddWordToDB" />
        <activity android:name=".YouWin"></activity>
    </application>

</manifest>